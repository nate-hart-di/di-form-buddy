# DI Form Buddy - Environment Configuration
# Copy this file to .env and fill in your values
# Then run: source setup.sh

# SSH credentials for pod access
SSH_USERNAME=nhart
SSH_PASSWORD=your_password_here

# HMAC secret for Form Buddy authentication
# Generate with: php -r "echo bin2hex(random_bytes(32)) . PHP_EOL;"
DI_FORM_BUDDY_SECRET=

# Email address for test submissions and notification rerouting
# All form notifications will be sent here instead of dealer emails
DI_FORM_BUDDY_EMAIL=di.form.buddy@gmail.com
